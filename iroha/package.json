    "graphql-tag": "^2.10.1",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3",
    "testcontainers": "^1.1.19",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "autobind-decorator": "^2.4.0",
    "dataloader": "^1.4.0",
    "delay": "^4.3.0",
    "graphql-yoga": "^1.18.0",
    "grpc": "^1.21.1",
