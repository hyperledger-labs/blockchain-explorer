					"csurf",
					"_csrf-hl-expl",
					"Uint8",
					"Uint8Array",
					"yml",
					"gui",
					"src",
					"cwd",
					"ordererorg1",
					"samplecc",
					"testorgschannel0",
					"mynetwork",
					"guitest",
					"configfiles",
					"_lifecycle",
					"bcrypt",
					"sequelize",
					"fabricexplorer",
					"firstname",
					"lastname",
					"userlist",
					"unregister",
					"userdataservice",
					"parens",
					"npm",
					"sqlcharacter",
					"peerlist",
					"www",
					"craetedat",
					"tcp",
					"appender"
				],
				"skipWordIfMatch": [
					"^\\d+px",
					"^\\d+vh",
					"^#[0-9a-f]+",
					"blk[a-z]+",
					"block[a-z]+",
					"[Cc]haincode[a-z]*",
					"channel[a-z]+",
					"[Oo]rderer[a-z]*",
					"'[0-9a-f]{64}'",
					"[a-zA-Z._0-9]{80}",
					"[cq]scc",
					"^get[a-zA-Z]+"
				],
				"skipIfMatch": ["[a-zA-Z._0-9]{80}", "'*tx[A-Za-z_]+"],
				"minLength": 3
			}
		]
	},
	"overrides": [
		{
			"files": ["*.spec.js", "**/app/test/**"],
			"rules": {
				"no-unused-expressions": "off"
			}
		},
		{
			"files": ["**/*.ts"],
			"plugins": ["spellcheck", "@typescript-eslint", "no-loops"],
			"extends": [
				"eslint:recommended",
				"plugin:@typescript-eslint/eslint-recommended",
				"plugin:@typescript-eslint/recommended"
			],
			"parser": "@typescript-eslint/parser",
			"rules": {
				"@typescript-eslint/no-explicit-any": "off",
				"@typescript-eslint/explicit-module-boundary-types": "off",
				"no-console": ["error"],
				"import/extensions": ["off"],
				"wrap-iife": ["error", "inside"]
			}
		}
	]
}
